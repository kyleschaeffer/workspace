# file system
alias l='ls -GFhal'
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'

# git
alias g='git'
alias gs='g status'
alias gl='g log --oneline -n 20'
alias ga='g add .'
alias gc='g commit -m'
alias gp='g push'
alias nah='g reset --hard;git clean -df'

# npm
alias ni='npm install'
alias nu='npm update'
alias nun='npm uninstall'
alias nl='npm list --depth=0'
alias nll='npm list --depth=1'
alias nlll='npm list --depth=2'
alias ng='npm -g'
alias no='npm outdated'
alias ngi='npm -g install'
alias ngu='npm -g update'
alias ngun='npm -g uninstall'
alias ngl='npm -g list --depth=0'
alias ngo='npm -g outdated'
alias nfresh='rm -rf node_modules && ni'

# composer
alias c='composer'
alias cu='c update'
alias ci='c install'
alias cda='c dump-autoload -o'
alias cg='composer global'
alias cgu='composer global update'
alias cgi='composer global install'

# laravel
alias a='php artisan'
alias tinker='a tinker'
alias migrate='a migrate'
alias fresh='a migrate:fresh --seed'
alias rl='a route:list'
alias t='phpunit'

# sharepoint
alias workbench='NODE_NO_HTTP2=1 gulp serve'
alias bundle='gulp bundle --ship'
alias pack='gulp package-solution --ship'
alias ship='bundle && pack && open ./sharepoint/solution'

# gif [input] [width]
gif(){
  ffmpeg -i $1 -vf scale=$2:-1 -pix_fmt rgb8 -r 10 -f gif - | gifsicle --optimize=3 --delay=3 > $1.gif
}

# just for fun
alias shrug="echo '¯\_(ツ)_/¯'"
alias fight="echo '(ง'̀-'́)ง'"

# list aliases
alias aliases='cat ~/.alias'
